{
  "name": "dazum-app",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "prisma generate && next build",
    "dev": "next dev",
    "generate": "prisma generate",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint-staged": "lint-staged",
    "prettier": "prettier --check \"**/*.{js,jsx,ts,tsx}\"",
    "prettier:fix": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "postinstall": "husky",
    "start": "next start",
    "test:playwright:chrome": "bun run test:playwright --project=chromium",
    "test:playwright:firefox": "bun run test:playwright --project=firefox",
    "test:playwright:webkit": "bun run test:playwright --project=webkit",
    "test:playwright:example": "bun run test:playwright",
    "test:playwright:debug": "bun run test:playwright --debug",
    "test:playwright:gen": "bun run test:playwright codegen",
    "test:playwright:ui": "bun run test:playwright --ui",
    "test:ut": "jest",
    "test:ut:watch": "jest --watch",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@nextui-org/react": "^2",
    "@prisma/client": "^5",
    "bcrypt": "^5",
    "clsx": "^2",
    "cookie": "^0",
    "cookie-signature": "^1",
    "framer-motion": "^11",
    "next": "^14",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@eslint/js": "^9",
    "@playwright/test": "^1",
    "@tailwindcss/forms": "^0",
    "@testing-library/jest-dom": "^6",
    "@testing-library/react": "^16",
    "@types/bcrypt": "^5",
    "@types/bun": "^1",
    "@types/cookie": "^0",
    "@types/cookie-signature": "^1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "eslint": "^9",
    "eslint-config-canonical": "^43",
    "eslint-config-next": "^14",
    "eslint-import-resolver-typescript": "^3",
    "eslint-plugin-github": "^5",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jest": "^28",
    "eslint-plugin-jsx-a11y": "^6",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^4",
    "eslint-plugin-sonarjs": "^1",
    "eslint-plugin-tsdoc": "^0",
    "eslint-plugin-typescript-sort-keys": "^3",
    "globals": "^15",
    "husky": "^9",
    "jest": "^29",
    "jest-environment-jsdom": "^29",
    "lightningcss": "^1",
    "postcss": "^8",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0",
    "prisma": "^5",
    "tailwindcss": "^3",
    "ts-node": "^10",
    "typescript": "^5",
    "typescript-eslint": "^7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
